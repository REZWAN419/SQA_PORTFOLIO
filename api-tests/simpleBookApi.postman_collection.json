		{
			"name": "API Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"//This checks the HTTP response status text, not the JSON body.\r",
							"pm.test(\"Status should be OK\", () => {\r",
							"    pm.expect(pm.response.status).to.eql(\"OK\");\r",
							"});\r",
							"\r",
							"//This test parses the response body as JSON. Then it checks that the status field inside the JSON body equals \"OK\".\r",
							"pm.test(\"Status of JSON body should be OK\", () => {\r",
							"    pm.expect(pm.response.json().status).to.eql(\"OK\");\r",
							"});\r",
							"\r",
							"\r",
							"pm.execution.setNextRequest(\"List of Books\");"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
