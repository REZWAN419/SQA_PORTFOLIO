		{
			"name": "List of Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// strict checks only for status code's string\r",
							"pm.test(\"Status Code's string is OK\", () => {\r",
							"    pm.expect(pm.response.status).to.eql(\"OK\");\r",
							"});\r",
							"\r",
							"\r",
							"//this is more flexible and modern, can be used for number or string\r",
							"pm.test(\"Status is OK\", () => {\r",
							"    pm.response.to.have.status(\"OK\");\r",
							"});\r",
							"\r",
							"\r",
							"const response = pm.response.json();\r",
							"\r",
							"const nonFictionBook = response.filter(book => book.available === true);\r",
							"\r",
							"const book = nonFictionBook[0];\r",
							"\r",
							"pm.test(\"Book found\", () => {\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    pm.expect(book.available).to.be.true; //this is same as pm.expect(book.available).to.equal(true);\r",
							"    pm.expect(book.available).to.equal(true); //this is same as pm.expect(book.available).to.be.true\r",
							"});\r",
							"\r",
							"pm.globals.set(\"bookId\", book.id); // Store the bookId in globals for later use\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
